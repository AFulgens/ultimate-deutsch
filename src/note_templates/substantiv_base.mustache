{
  'main':'
<div class="type">Hauptwort</div>

<div class="value">{{nominativ}}</div>


<table>

    <tr>

        <th></th>

        <th>Singular</th>

        <th>Plural</th>

    </tr>

    <tr>

        <th>Nominativ</th>

        <td>

            <div id="singular-nominativ">##ART## {{nominativ}}</div>

        </td>

        <td>

            <div id="plural-nominativ">

                {{#nominativ_plural}}

                    ##ART## {{nominativ_plural}}

                {{/nominativ_plural}}

                {{^nominativ_plural}}

                    &mdash;

                {{/nominativ_plural}}

            </div>

        </td>

    </tr>

    <tr>

        <th>Genitiv</th>

        <td>

            <div id="singular-genitiv">##ART## {{genitiv}}</div>

        </td>

        <td>

            <div id="plural-genitiv">

                {{#genitiv_plural}}

                    ##ART## {{genitiv_plural}}

                {{/genitiv_plural}}

                {{^genitiv_plural}}

                    &mdash;

                {{/genitiv_plural}}

            </div>

        </td>

    </tr>

    <tr>

        <th>Dativ</th>

        <td>

            <div id="singular-dativ">##ART## {{dativ}}</div>

        </td>

        <td>

            <div id="plural-dativ">

                {{#dativ_plural}}

                    ##ART## {{dativ_plural}}

                {{/dativ_plural}}

                {{^dativ_plural}}

                    &mdash;

                {{/dativ_plural}}

            </div>

        </td>

    </tr>

    <tr>

        <th>Akkusativ</th>

        <td>

            <div id="singular-akkusativ">##ART## {{akkusativ}}</div>

        </td>

        <td>

            <div id="plural-akkusativ">

                {{#akkusativ_plural}}

                    ##ART## {{akkusativ_plural}}

                {{/akkusativ_plural}}

                {{^akkusativ_plural}}

                    &mdash;

                {{/akkusativ_plural}}

            </div>

        </td>

    </tr>

</table>


<hr/>

<div class="type" style="display:inline;">Niveau:</div> {{niveau}} <br/><br/>

{{#duden_haeufigkeit}}

    <div class="type" style="display:inline;">Häufigkeit:</div> <div id="duden" style="display:inline;  ">{{duden_haeufigkeit}}</div> <br/><br/>

{{/duden_haeufigkeit}}

{{#hinweis}}

    <div class="type" style="display:inline;">Hinweis:</div> {{hinweis}} <br/><br/>

{{/hinweis}}

<div class="type" style="display:inline;">Wort in Fremdsprache:</div> {{#fremd}}{{fremd}}{{/fremd}}{{^fremd}}N/A{{/fremd}} <br/><br/>

{{#fremd_hinweis}}

    <div class="info" style="display:inline;">Hinweis für Fremdsprache:</div> {{fremd_hinweis}} <br/><br/>

{{/fremd_hinweis}}',
  'script':'<script>

    var duden = document.getElementById("duden")

    if (duden) {

      var duden_counter = 1;

      var duden_level = duden.innerText;

      duden.innerHTML = ""

      for (; duden_counter <= duden_level; ++duden_counter) {

        duden.innerHTML += "&starf; "

      }

      for (; duden_counter <= 5; ++duden_counter) {

        duden.innerHTML += "&star; "

      }

      switch (duden_level) {

        case "1":
          duden.innerHTML += "(1000+ / 1M)";
          break;

        case "2":
          duden.innerHTML += "(100+ / 1M)";
          break;

        case "3":
          duden.innerHTML += "(10+ / 1M)";
          break;

        case "4":
          duden.innerHTML += "(1+ / 1M)";
          break;

        case "5":
          duden.innerHTML += "(1- / 1M)";
          break;

      }

    }

    var articles = new Map()

    articles.set("plural-nominativ", "die")

    articles.set("plural-genitiv", "der")

    articles.set("plural-dativ", "den")

    articles.set("plural-akkusativ", "die")


    if ("{{geschlecht}}".indexOf("maskulin") !== -1) {

        if ("{{geschlecht}}".indexOf("(maskulin)") !== -1) {

            articles.set("singular-nominativ", "(der)")

            articles.set("singular-genitiv", "(des)")

            articles.set("singular-dativ", "(dem)")

            articles.set("singular-akkusativ", "(den)")

        } else {

            articles.set("singular-nominativ", "der")

            articles.set("singular-genitiv", "des")

            articles.set("singular-dativ", "dem")

            articles.set("singular-akkusativ", "den")

        }

    }

    if ("{{geschlecht}}".indexOf("feminin") !== -1) {

        if ("{{geschlecht}}".indexOf("(feminin)") !== -1) {

            articles.set("singular-nominativ", articles.has("singular-nominativ") ? articles.get("singular-nominativ") + " (oder die)" : "(die)")

            articles.set("singular-genitiv", articles.has("singular-genitiv") ? articles.get("singular-genitiv") + " (oder der)" : "(der)")

            articles.set("singular-dativ", articles.has("singular-dativ") ? articles.get("singular-dativ") + " (oder der)" : "(der)")

            articles.set("singular-akkusativ", articles.has("singular-akkusativ") ? articles.get("singular-akkusativ") + " (oder die)" : "(die)")

        } else {

            articles.set("singular-nominativ", articles.has("singular-nominativ") ? articles.get("singular-nominativ") + " oder die" : "die")

            articles.set("singular-genitiv", articles.has("singular-genitiv") ? articles.get("singular-genitiv") + " oder der" : "der")

            articles.set("singular-dativ", articles.has("singular-dativ") ? articles.get("singular-dativ") + " oder der" : "der")

            articles.set("singular-akkusativ", articles.has("singular-akkusativ") ? articles.get("singular-akkusativ") + " oder die" : "die")

        }

    }

    if ("{{geschlecht}}".indexOf("Neutrum") !== -1) {

        if ("{{geschlecht}}".indexOf("(Neutrum)") !== -1) {

            articles.set("singular-nominativ", articles.has("singular-nominativ") ? articles.get("singular-nominativ") + " (oder das)" : "(das)")

            articles.set("singular-genitiv", articles.has("singular-genitiv") ? articles.get("singular-genitiv") + " (oder des)" : "(des)")

            articles.set("singular-dativ", articles.has("singular-dativ") ? articles.get("singular-dativ") + " (oder dem)" : "(dem)")

            articles.set("singular-akkusativ", articles.has("singular-akkusativ") ? articles.get("singular-akkusativ") + " (oder das)" : "(das)")

        } else {

            articles.set("singular-nominativ", articles.has("singular-nominativ") ? articles.get("singular-nominativ") + " oder das" : "das")

            articles.set("singular-genitiv", articles.has("singular-genitiv") ? articles.get("singular-genitiv") + " oder des" : "des")

            articles.set("singular-dativ", articles.has("singular-dativ") ? articles.get("singular-dativ") + " oder dem" : "dem")

            articles.set("singular-akkusativ", articles.has("singular-akkusativ") ? articles.get("singular-akkusativ") + " oder das" : "das")

        }

    }


    articles.forEach((value, key) => {

        var curr = document.getElementById(key)

        if (key !== type) {

            curr.className = "info"

        }


        if (isFront) {

            curr.innerHTML = "... ..."

            if (key === type) {

                curr.innerHTML = "? ?"

                curr.className = "question"

            }

        } else {

            curr.innerHTML = curr.innerHTML.replace("##ART##", value)

            if (key === type) {

                curr.className = "answer"

            }

        }
    })

</script>'
}
