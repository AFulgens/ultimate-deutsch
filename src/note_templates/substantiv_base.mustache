    <div class="type">Hinweis:</div> {{ hinweis }}

    <br/><br/>

{{/hinweis}}

<div class="type">Fremdsprache:</div> {{ fremd }}

{{#hint}}

    <div class="info">Hinweis f√ºr Fremdsprache:</div> {{ hinweis fremd }}

{{/hint}}',
  'script':'<script>
    var isFront = true

    var articles = new Map()

    articles.set("plural-nominativ", "die")

    articles.set("plural-genitiv", "der")

    articles.set("plural-dativ", "den")

    articles.set("plural-akkusativ", "die")


    if ("{{geschlecht}}".indexOf("maskulin") !== -1) {

        if ("{{geschlecht}}".indexOf("(maskulin)") !== -1) {

            articles.set("singular-nominativ", "(der)")

            articles.set("singular-genitiv", "(des)")

            articles.set("singular-dativ", "(dem)")

            articles.set("singular-akkusativ", "(den)")

        } else {

            articles.set("singular-nominativ", "der")

            articles.set("singular-genitiv", "des")

            articles.set("singular-dativ", "dem")

            articles.set("singular-akkusativ", "den")

        }

    }

    if ("{{geschlecht}}".indexOf("feminin") !== -1) {

        if ("{{geschlecht}}".indexOf("(feminin)") !== -1) {

            articles.set("singular-nominativ", articles.has("singular-nominativ") ? articles.get("singular-nominativ") + " (oder die)" : "(die)")

            articles.set("singular-genitiv", articles.has("singular-genitiv") ? articles.get("singular-genitiv") + " (oder der)" : "(der)")

            articles.set("singular-dativ", articles.has("singular-dativ") ? articles.get("singular-dativ") + " (oder der)" : "(der)")

            articles.set("singular-akkusativ", articles.has("singular-akkusativ") ? articles.get("singular-akkusativ") + " (oder die)" : "(die)")

        } else {

            articles.set("singular-nominativ", articles.has("singular-nominativ") ? articles.get("singular-nominativ") + " oder die" : "die")

            articles.set("singular-genitiv", articles.has("singular-genitiv") ? articles.get("singular-genitiv") + " oder der" : "der")

            articles.set("singular-dativ", articles.has("singular-dativ") ? articles.get("singular-dativ") + " oder der" : "der")

            articles.set("singular-akkusativ", articles.has("singular-akkusativ") ? articles.get("singular-akkusativ") + " oder die" : "die")

        }

    }

    if ("{{geschlecht}}".indexOf("Neutrum") !== -1) {

        if ("{{geschlecht}}".indexOf("(Neutrum)") !== -1) {

            articles.set("singular-nominativ", articles.has("singular-nominativ") ? articles.get("singular-nominativ") + " (oder das)" : "(das)")

            articles.set("singular-genitiv", articles.has("singular-genitiv") ? articles.get("singular-genitiv") + " (oder des)" : "(des)")

            articles.set("singular-dativ", articles.has("singular-dativ") ? articles.get("singular-dativ") + " (oder dem)" : "(dem)")

            articles.set("singular-akkusativ", articles.has("singular-akkusativ") ? articles.get("singular-akkusativ") + " (oder das)" : "(das)")

        } else {

            articles.set("singular-nominativ", articles.has("singular-nominativ") ? articles.get("singular-nominativ") + " oder das" : "das")

            articles.set("singular-genitiv", articles.has("singular-genitiv") ? articles.get("singular-genitiv") + " oder des" : "des")

            articles.set("singular-dativ", articles.has("singular-dativ") ? articles.get("singular-dativ") + " oder dem" : "dem")

            articles.set("singular-akkusativ", articles.has("singular-akkusativ") ? articles.get("singular-akkusativ") + " oder das" : "das")

        }

    }


    articles.forEach((value, key) => {

        var curr = document.getElementById(key)

        if (key !== type) {

            curr.className = "info"

        }


        if (isFront) {

            curr.innerHTML = "... ..."

            if (key === type) {

                curr.innerHTML = "? ?"

                curr.className = "question"

            }

        } else {

            curr.innerHTML = curr.innerHTML.replace("##ART##", value)

            if (key === type) {

                curr.className = "answer"

            }

        }
    })

</script>'
}
